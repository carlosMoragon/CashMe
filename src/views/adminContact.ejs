<%- include('adminHeader') %> 
    <!-- Messages from database Start-->
    <div class="container mt-5">
        <h1 class="text-center mb-4">Contact Messages</h1>

        <% if (messages.length > 0) { %>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th>Message</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% messages.forEach(message => { %>
                <tr>
                    <td><%= message.id %></td>
                    <td><%= message.nombre %></td>
                    <td><%= message.correo %></td>
                    <td><%= message.asunto %></td>
                    <td><%= message.mensaje %></td>
                    <td>
                        <a href="#" class="btn btn-danger btn-sm delete-message" data-id="<%= message.id %>">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
        <p class="text-center">No messages found.</p>
        <% } %>
    </div>

    <script>
        // Script para manejar el botÃ³n de eliminar
        document.querySelectorAll('.delete-message').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const messageId = this.getAttribute('data-id');
                
                if (confirm('Are you sure you want to delete this message?')) {
                    fetch(`adminContact/delete-message/${messageId}`, {
                        method: 'DELETE'
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Message deleted successfully!');
                            location.reload();
                        } else {
                            alert('Error deleting the message.');
                        }
                    })
                    .catch(err => console.error('Error:', err));
                }
            });
        });
    </script>
    
    <!-- Messages DB end -->


        
<%- include('footer') %>


        