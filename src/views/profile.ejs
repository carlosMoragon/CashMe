    <div class="container mt-5">
        <h2 class="text-center mb-4">Client Garden</h2>

        <!-- Contenedor de las plantas disponibles -->
        <div class="plant-container">
            <div class="plant-item">
                <img src="/images/planta1.jpg" alt="Plant 1" id="plant1-img">
                <button class="buy-plant-btn" onclick="buyPlant('planta1', '/images/planta1.jpg')">Buy Plant 1</button>
            </div>
            <div class="plant-item">
                <img src="/images/planta2.jpg" alt="Plant 2" id="plant2-img">
                <button class="buy-plant-btn" onclick="buyPlant('planta2', '/images/planta2.jpg')">Buy Plant 2</button>
            </div>
            <div class="plant-item">
                <img src="/images/planta3.jpg" alt="Plant 3" id="plant3-img">
                <button class="buy-plant-btn" onclick="buyPlant('planta3', '/images/planta3.jpg')">Buy Plant 3</button>
            </div>
        </div>

        <!-- Contenedor del jardín -->
        <div class="garden" id="garden" ondrop="drop(event)" ondragover="allowDrop(event)"></div>
        <script>
            let plantCount = {
                planta1: 0,
                planta2: 0,
                planta3: 0
            };

            // Función para permitir el arrastre
            function allowDrop(event) {
                event.preventDefault(); // Necesario para permitir el drop
            }

            // Función para iniciar el arrastre
            function drag(event) {
                event.dataTransfer.setData("text", event.target.id); // Guardamos el id del elemento arrastrado
            }

            // Función para comprar la planta
            function buyPlant(plantId, plantImg) {
                // Incrementar el contador de la planta seleccionada
                plantCount[plantId]++;

                // Crear una nueva planta y hacerla arrastrable
                const newPlant = document.createElement('img');
                newPlant.src = plantImg; // Usamos la imagen de la planta seleccionada
                newPlant.classList.add('plant');
                newPlant.id = plantId + '-' + plantCount[plantId]; // ID único para cada planta añadida
                newPlant.setAttribute('draggable', 'true'); // Permitir arrastre de la nueva planta

                // Asignar evento para el arrastre
                newPlant.setAttribute('ondragstart', 'drag(event)');

                // Posicionar la planta en el jardín (en una posición aleatoria)
                const garden = document.getElementById('garden');
                const maxX = garden.offsetWidth - 100;
                const maxY = garden.offsetHeight - 100;
                newPlant.style.left = `${Math.random() * maxX}px`;
                newPlant.style.top = `${Math.random() * maxY}px`;

                // Agregar la planta al jardín
                garden.appendChild(newPlant);
            }

            // Función para soltar la planta en el jardín
            function drop(event) {
                event.preventDefault();
                const plantId = event.dataTransfer.getData("text");
                const plant = document.getElementById(plantId);

                // Calcula la nueva posición en el jardín
                const garden = document.getElementById('garden');
                const gardenRect = garden.getBoundingClientRect();
                const x = event.clientX - gardenRect.left - plant.width / 2;
                const y = event.clientY - gardenRect.top - plant.height / 2;

                // Establece la nueva posición de la planta
                plant.style.left = `${x}px`;
                plant.style.top = `${y}px`;
            }
        </script>
    </div>
